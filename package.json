{
  "name": "kilogram8",
  "version": "1.0.0",
  "description": "The best in class messenger",
  "homepage": "/",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=frontend\" \"npm run dev --workspace=backend\"",
    "lint": "npm run lint --workspaces",
    "frontend": "npm run dev --workspace=frontend",
    "backend": "npm run dev --workspace=backend",
    "heroku-postbuild": "npm run-script deploy-backend && npm run-script deploy-frontend",
    "deploy-backend": "cd backend && npm install",
    "deploy-frontend": "cd frontend && npm install && npm run build && surge --project ./build --domain messenger.urfu.surge.sh --token ${SURGE_TOKEN}",
    "start": "cd backend && npm run start"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.6"
  },
  "devDependencies": {
    "git-scripts": "^0.4.3",
    "rimraf": "^3.0.2",
    "surge": "^0.23.0"
  }
}
