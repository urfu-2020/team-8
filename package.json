{
  "name": "kilogram8",
  "version": "1.0.0",
  "description": "The best in class messenger",
  "homepage": "/",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=frontend\" \"npm run dev --workspace=backend\"",
    "lint": "npm run lint --workspaces",
    "build": "npm run build --workspaces",
    "start": "concurrently \"npm run serve --workspace=frontend\" \"npm run start --workspace=backend\"",
    "frontend": "npm run dev --workspace=frontend",
    "backend": "npm run dev --workspace=backend",
    "heroku-prebuild": "npm install && npm link",
    "heroku-postbuild": "npm run-script surge",
    "surge": "npm run build --workspace=frontend && surge --project ./frontend/build --domain messenger.urfu.surge.sh --token ${SURGE_TOKEN}"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.6"
  },
  "devDependencies": {
    "git-scripts": "^0.4.3",
    "surge": "^0.23.0",
    "typescript": "^4.2.3",
    "rimraf": "^3.0.2"
  }
}
