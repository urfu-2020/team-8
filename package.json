{
  "name": "kilogram8",
  "version": "1.0.0",
  "description": "The best in class messenger",
  "homepage": "https://github.com/urfu-2020/team-8#readme",
  "main": "index.js",
  "scripts": {
    "dev": "npm run-script build && npm run-script start",
    "surge": "surge --project ./app/static_content --domain messenger.urfu.surge.sh",
    "start": "node dist/index.js",
    "build": "npx tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start-frontend": "react-scripts start",
    "build-frontend": "react-scripts build",
    "test-frontend": "react-scripts test",
    "eject-frontend": "react-scripts eject",
    "lint": "npm run-script lint-ts && npm run-script lint-css",
    "lint-ts": "eslint app/**/*.ts --fix",
    "lint-css": "npx stylelint app/**/*.css --fix",
    "heroku-prebuild": "npm run-script surge"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "git-scripts": "^0.4.3",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "surge": "^0.23.0",
    "typescript": "^4.2.3"
  }
}
