{
  "name": "kilogram8",
  "version": "1.0.0",
  "description": "The best in class messenger",
  "homepage": "/",
  "main": "index.js",
  "scripts": {
    "dev": "npm run-script dev-frontend && npm run-script dev-backend",
    "lint": "npm run-script lint-frontend && npm run-script lint-backend",
    "build": "npm run-script build-frontend && npm run-script build-backend",
    "start": "npm run-script start-frontend && npm run-script start-backend",

    "dev-backend": "",
    "start-backend": "node dist/server/index.js",
    "build-backend": "npx tsc",
    "test-backend": "echo \"Error: no test specified\" && exit 1",
    "lint-backend": "eslint server/**/*.ts --fix",

    "dev-frontend": "react-scripts start",
    "start-frontend": "npm run-script build && npm run-script start",
    "build-frontend": "react-scripts build",
    "test-frontend": "react-scripts test",
    "lint-frontend": "eslint src/**/*.js --fix && npx stylelint src/**/*.css --fix",
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
      "@material-ui/core": "^4.11.3",
      "@material-ui/icons": "^4.11.2",
      "@testing-library/jest-dom": "^5.11.10",
      "@testing-library/react": "^11.2.6",
      "@testing-library/user-event": "^12.8.3",
      "react": "^17.0.2",
      "react-dom": "^17.0.2",
      "react-scripts": "4.0.3",
      "web-vitals": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "stylelint": "^13.12.0",
    "typescript": "^4.2.3",
    "stylelint-config-standard": "^21.0.0"
  }
}
